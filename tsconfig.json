{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "lib": ["ES2020", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@"
    },
    "include": ["src/**/*", "tests/**/*", "src/types/jsx.d.ts"],
    "exclude": ["node_modules"]
}
