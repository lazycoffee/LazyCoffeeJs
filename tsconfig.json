{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "lib": ["ES2020", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
